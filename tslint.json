{
    "extends": [
        "tslint:recommended"
    ],
    "defaultSeverity": "error",
    "env": {
        "node": true,
        "commonjs": true
    },
    "jsRules": {},
    "rules": {
		"whitespace": [true, "check-branch", "check-operator", "check-typecast", "check-type", "check-rest-spread", "check-preblock"],
        "no-console": false,
        "no-var-requires": false,
        "indent": [true, "tabs", 4],
        "quotemark": {
            "options": ["single", "jsx-double"],
            "severity": "error"
        },
        "semicolon": {
            "options": ["always"],
            "severity": "error"
        },
        "ordered-imports": {
            "options": {
                "import-sources-order": "case-insensitive",
                "named-imports-order": "case-insensitive"
            },
            "severity": "error"
        },
        "arrow-parens": true,
        "max-line-length": [
            true,
            {
              "limit": 150,
              "ignore-pattern": "^import [^,]+ from |^export | implements"
            }
        ]
    },
    "rulesDirectory": []
}
